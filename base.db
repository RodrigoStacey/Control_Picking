CREATE View control_pedidos_dia
AS
SELECT pedidos.idcentro ,centros.centro,ruta,estado, COUNT(DISTINCT num_entrega) AS total_pedidos  FROM pedidos 
LEFT OUTER JOIN centros on pedidos.idcentro = centros.idcentro
WHERE fecha =  CURDATE()
GROUP BY pedidos.idcentro,centros.centro,ruta,estado



select idcentro,centro,ruta,
    SUM(CASE WHEN estado = 'A' THEN total_pedidos ELSE 0 END) AS "Activos",
    SUM(CASE WHEN estado = 'P' THEN total_pedidos ELSE 0 END) AS "EnProceso",
    SUM(CASE WHEN estado = 'F' THEN total_pedidos ELSE 0 END) AS "Finalizados"
FROM control_pedidos_dia;
GROUP BY idcentro,centro,ruta




